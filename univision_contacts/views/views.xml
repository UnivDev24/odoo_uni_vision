<odoo>
  <data>
      
      
      <!-- modify kanban view of res_partner_form - click of kanban item open form in new tab -->
      
      
       <record model="ir.ui.view" id="view_partner_form_univision_inherited">
            <field name="name">res.partner.form.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">

                
                <xpath expr="//t[@t-name='kanban-box']/div[hasclass('o_kanban_image')]" position="before">
                     <button style="cursor:pointer; pointer-events:auto; position:absolute; width:100%; height:100%; background:none; border:none;" title="open" type="object" name="open_record"/>
                    
                </xpath> 
                
                
            </field>                               
        </record>
      
      
      
  </data>
</odoo>