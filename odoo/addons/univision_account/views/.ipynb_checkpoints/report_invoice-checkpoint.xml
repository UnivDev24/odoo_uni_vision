<odoo>
    <data>
        
        
         <template id="report_invoice_univision" inherit_id="account.report_invoice_document">
	                  
             
             <xpath expr="//div[hasclass('page')]" position="before">
              <div class="mt-4"></div>
            </xpath>
             
             <xpath expr="//div[@id='informations']" position="before">  
                 <div class="mt-3"></div>          
            </xpath>
             
             <xpath expr="//div[@id='informations']" position="after">  
                 <div class="mb-3"></div>          
            </xpath>

             
<!--     FFI BE CAREFUL MUST BE PLACED BEFORE THE FOLLOWING XPATH          -->
            <xpath expr="//div[@name='comment']" position="replace">
            </xpath>    
             
            <xpath expr="//div[hasclass('clearfix')]" position="after">  
                 <div class="mt-5"></div>
                <div t-if="not is_html_empty(o.narration)" name="comment">
<!--    FFI - COULD BE UNCOMMENTED IF THE USER WANT TO ADD A COMMENT TO THE INVOICE CHECK LATER                  -->
<!--                         <span t-field="o.narration"/> -->
                </div>
          
            </xpath>
                     
             
            <xpath expr="//p[@name='payment_communication']" position="replace">
                <p t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference" name="payment_communication">
                        Merci d'utiliser la communication suivante pour votre paiement : <b><span t-field="o.name"/></b>
                </p>                
            </xpath> 
             
             
             <xpath expr="//p[@name='payment_term']" position="after">  
                 
                        <p class="mt-2" >
                            Mode de réglement : 
                        </p>
                        <p class="ml-3">
                          <span >Par chèque à l'ordre de UNIVISION</span><br><span >Par virement IBAN FR76 1380 7008 7207 1218 3441 192 - BIC CCBPFRPPNAN</span></br>
                </p>

            </xpath>


            <xpath expr="//p[@name='note']" position="replace">
                
            </xpath> 

        </template>
    </data>
</odoo>