<odoo>
    <data>
         <template id="report_saleorder_univision" inherit_id="sale.report_saleorder_document">
	           
             <xpath expr="//div[@class='page']" position="before">
              <div class="mt64"></div>
            </xpath>         
             
            <xpath expr="//div[@id='informations']/div/p[@t-field='doc.date_order']" position="replace">
                    <p t-esc="doc.date_order" t-options='{"widget": "date"}'/>
            </xpath>
             
             
             <xpath expr="//div[@id='informations']/div[@t-if='doc.user_id.name']" position="replace">
            </xpath>
             
             
             
              <xpath expr="//table[@class='table table-sm o_main_table']/thead/tr/th[last()]/t[last()]" position="replace">
             </xpath>
                         
             <xpath expr="//tbody[@class='sale_tbody']/t/tr/t[@t-if='not line.display_type']/td/span[@t-field='line.product_uom']" position="replace">
             </xpath>
             
             <xpath expr="//tbody[@class='sale_tbody']/t/tr/t[@t-if='not line.display_type']/td[last()]/span[last()]" position="replace">
             </xpath>
             
             
             <xpath expr="//div[@class='clearfix']" position="after">  
                 <div class="mt64"></div>
            </xpath>
             
             

        </template>
    </data>
</odoo>