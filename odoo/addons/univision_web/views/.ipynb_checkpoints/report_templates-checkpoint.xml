<odoo>
    <data>
        
        <template id="external_layout_univision" inherit_id="web.external_layout_striped">
	           <xpath expr="//div[contains(@t-attf-class, 'header')]" position="replace">   
                   
                <div t-attf-class="o_company_#{company.id}_layout header" t-att-style="report_header_style">
                    <div class="o_background_header_univision">
                    <div class="float-right">
                        <h3 class="mt0 text-right" t-field="company.report_header"/>
                    </div>
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-left" alt="Logo"/>
                    <div class="clearfix mb8"/>
                    </div>
                </div>                      
            </xpath>
            
            <xpath expr="//div[contains(@t-attf-class, 'footer')]/div/div[hasclass('text-muted')]" position="replace">
                 <div t-if="report_type == 'pdf'" class="text-muted">                  
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </xpath>           
            
        </template>
        
        
        
        
        
        
